extends auth

block auth
  form.signin.form-horizontal(action="/users/session", method="post")
    if(typeof message !== 'undefined' && message.length > 0)
      .alert.alert-danger= message
    .form-group
      label.control-label(for='email') Email
      .controls
        input.form-control#email(type='text', name="email", placeholder='Email')

    .form-group
      label.control-label(for='password') Password
      .controls
        input.form-control#password(type='password', name="password", placeholder='Password')

    .form-group
      button.btn.btn-primary(type='submit') Sign in
      &nbsp;
      | or&nbsp;
      a.show-signup(href="/signup") Sign up
